@model LoginVM
@{
  Layout = "_AuthLayout";
  ViewData["Title"] = "Login Page";
}

<section class="login-page">
  <div class="login-box">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a href="/Home/Index" class="h1">Job Board</a>
      </div>
      <div class="card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <form asp-action="Index" asp-controller="Auth" class="container" method="post">
          <div class="form-floating mb-3">
            <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
            <label asp-for="Email">Email address</label>
            <span class="text-danger" asp-validation-for="Email"></span>
          </div>
          <div class="form-floating mb-2">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            <label asp-for="Password">Password</label>
            <span class="text-danger" asp-validation-for="Password"></span>
          </div>
          <div class="row m-0 mb-2">
            <div class="col-sm-6 p-0">
              <input type="checkbox" asp-for="RememberMe">
              <label asp-for="RememberMe">Remember Me</label>
            </div>
            <div class="col-sm-6 text-end p-0">
              <a href="#">Forget Password?</a>
            </div>
          </div>

          <div class="row gy-3">
            <div class="col-sm-6 text-center">
              <a href="/Auth/RegisterEmployer/"><small>Register as Employer</small></a>
            </div>
            <div class="col-sm-6 text-center">
              <a href="/Auth/RegisterJobSeeker/"><small>Register as Job Seeker</small></a>
            </div>
            <div class="col-12 text-center">
              <button type="submit" class="btn btn-primary">LogIn</button>
            </div>
            
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
